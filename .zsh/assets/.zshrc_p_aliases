alias listening='lsof -PiTCP -sTCP:LISTEN'
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Change if use for than one users
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias gvimopts='vim ~/.gvimrc'
alias vimopts='vim ~/.vim/assets/.options.vim ~/.vim/assets/.keymappings.vim'

alias zshpa='vim ~/.zsh/assets/.zshrc_p_aliases'
alias zshpe='vim ~/.zsh/assets/.zshrc_p_env'
alias zshta='vim ~/.zsh/assets/.zshrc_t_aliases'
alias zshte='vim ~/.zsh/assets/.zshrc_t_env'

alias zshcfg='vim ~/.zshrc'

# cli tools
# Rubocop
alias rbcbA='git diff --name-only master --diff-filter AMT | xargs bundle exec rubocop -A'
alias rbcb='git diff --name-only master --diff-filter AMT | xargs bundle exec rubocop'
